package task5and6;

public class FromDecimalToBase {

	public static void main(String[] args) {
		int number=123;
		int base=7;
		System.out.println(FromDecimalToBase(number,base));
	}

	private static String FromDecimalToBase(int number, int base){	
		String result="";
		if (number<base) {
			result+= number;
		}
		result+= number/base;
		return result+number%base;
	}
}
