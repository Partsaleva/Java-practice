package task5and6;

public class FromDecimalToBase {

	public static void main(String[] args) {
		int number=123;
		int base=7;
		System.out.println(FromDecimalToBase(number,base));
	}

	private static int FromDecimalToBase(int number, int base){	
		int result=0;
		int rem =number%base;
		while(number!=0){
			number=number/base;
			while(number>base){
				base*=base;
				number=number/base;
				result+=number*10;
			}
			
		}
		return result+rem;
	}
}
