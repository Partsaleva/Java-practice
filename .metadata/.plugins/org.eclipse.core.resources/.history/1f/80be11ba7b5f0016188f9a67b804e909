import java.util.Arrays;
import java.util.List;
import java.util.regex.Matcher;
import java.util.regex.Pattern;

/*Below are a few common emails, in this example, try to capture the 
 *name of the email, excluding the filter (+ character and afterwards) 
 *and domain (@ character and afterwards).*/
public class Problem3MatchingEmails {
    List<String> emails=Arrays.asList("tom@hogwarts.com", "tom.riddle@hogwarts.com", 
            "tom.riddle+regexone@hogwarts.com", "tom@hogwarts.eu.com", "potter@hogwarts.com", 
            "harry@hogwarts.com", "hermione+regexone@hogwarts.com");
    Pattern p=Pattern.compile("[a-z]+\\.?[a-z]*\\+?[a-z]*");
   
}
