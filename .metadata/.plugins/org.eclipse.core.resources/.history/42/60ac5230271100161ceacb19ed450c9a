package task5and6;

public class FromDecimalToBase {

	public static void main(String[] args) {
		int number=1000;
		int base=7;
		System.out.println(FromDecimalToBase(number,base));
	}

	private static int FromDecimalToBase(int number, int base){
		String result="";
		while(number/base != 0){
			number=number%base;
			int h=number/base;
			while(h>base){
				base*=base;
			}
			h=number/base;
			result+=h;
		}
		
		return Integer.parseInt(result);
	}
}
