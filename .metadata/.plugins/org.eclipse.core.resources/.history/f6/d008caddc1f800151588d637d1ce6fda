import java.util.Random;

public class GuessTheNumber {

	public static void main(String[] args) {
		Random rand=new Random();
		int num=rand.nextInt(1000);
		search(25,num);
	}

	public static int guess(int x, int num){
		if (x==num) {
			return 0;
		} else if(x<num){
			return -1;
		}
		else{
			return 1;
		}
	}
	
	public static int search(int x, int num){
		int check=guess(x,num);
		int end=1000,begin=0;
		if(check==0){
			return x;
		}
		else if(check==1){
			x=end-begin;
			guess(x,num);
		}
		else{
			x=end/2-begin;
			guess(x,num);
		}
		return search(x, num);
	}
	
}
