package h1Java_Advanced_Stacks_and_Queues;

import java.util.Stack;

public class Problem7BalancedParentheses {

    public static void main(String[] args) {
        Stack<Character> parentheses =new Stack();
        String input="{[()]}";
        checkIfBalanced(parentheses, input);
        input="{[(])}";
        checkIfBalanced(parentheses, input);
        input="{{[[(())]]}}";
        checkIfBalanced(parentheses, input);
    }
    public static void checkIfBalanced(Stack<Character> parentheses, String input){
        parentheses.push(input.charAt(0));
        for (int i = 1; i < input.length(); i++) {
            if (input.charAt(i)==parentheses.peek()) {
                parentheses.pop();
            }else{
                parentheses.push(input.charAt(i));
            }
        }
        if (parentheses.isEmpty()) {
            System.out.println("YES");
        } else {
            System.out.println("NO");
        }
    }

}
