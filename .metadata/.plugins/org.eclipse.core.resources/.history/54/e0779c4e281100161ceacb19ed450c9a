package task5and6;

public class FromDecimalToBase {

	public static void main(String[] args) {
		int number=123;
		int base=7;
		System.out.println(FromDecimalToBase(number,base));
	}

	private static int FromDecimalToBase(int number, final int base){
		String result="";
		while(number/base != 0){
			result+=(number/base);
			number=number%base;
			
		}
		
		return Integer.parseInt(result);
	}
}
