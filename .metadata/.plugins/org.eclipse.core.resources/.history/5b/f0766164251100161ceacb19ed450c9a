package task5and6;

public class FromDecimalToBase {

	public static void main(String[] args) {
		int number=1000;
		int base=7;
		FromDecimalToBase(number,base);
	}

	private static int FromDecimalToBase(int number, int base){
		while(number/base>base ) {
			base=base*base;			
		}
		int num=number%base;
		String result="";
		result+=(number/base);
		return Integer.parseInt(result);
	}
}
