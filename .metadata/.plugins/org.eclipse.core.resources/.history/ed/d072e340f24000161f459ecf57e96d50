            }
        }
        return sum;
    }
    
    private static int valueOfNotNumCard(String card){
        int value=0;
        switch(card){
            case "J": value= 12;
            break;
            case "Q": value= 13;
            break;
            case "K": value= 14;
            break;
            case "A": value= 15;
            break;
        }
        return value;
    }
