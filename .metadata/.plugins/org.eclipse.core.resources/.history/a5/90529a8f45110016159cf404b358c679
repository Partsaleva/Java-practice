package task5and6;

public class FromDecimalToBase {

	public static void main(String[] args) {
		int number=123;
		int base=7;
		System.out.println(FromDecimalToBase(number,base));
	}

	private static int FromDecimalToBase(int number, int base){
		String result="";
		int count=1;
		int rem=number%base;
		while(number!=0){
			while(number/base > base){
				base*=base;
				count++;
			}
			result+=number/base;
			number=number%base;
			base/=7;
			
		}
		result+=rem;
		
		return Integer.parseInt(result);
	}
}
